<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <br.odb.GameViewGLES2
        android:id="@+id/gameView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:focusable="false">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bgrepeat"
            android:tint="#B555" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llScreenControllers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:minHeight="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:focusable="false" />

                    <ImageButton
                        android:id="@+id/btnUp"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#000000FF"
                        android:focusable="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/down"
                        android:text="" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:focusable="false" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btnLeft"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#000000FF"
                        android:focusable="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right"
                        android:text="" />

                    <ImageButton
                        android:id="@+id/btnCenter"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#000000FF"
                        android:focusable="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/down"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/btnRight"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#000000FF"
                        android:focusable="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/left"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:focusable="false" />

                    <ImageButton
                        android:id="@+id/btnDown"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#000000FF"
                        android:focusable="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/up"
                        android:text="" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:focusable="false" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llactions"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/btnAttack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attack" />



                <Button
                    android:id="@+id/btnPick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Pick" />

                <Button
                    android:id="@+id/btnNextItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next Item" />

                <Button
                    android:id="@+id/btnPrevItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drop Item" />
                

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
